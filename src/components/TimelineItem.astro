---
const { role, company, when, location } = Astro.props;
---
<li class="relative pl-6">
  <span class="absolute left-0 top-1.5 h-3 w-3 rounded-full bg-sky-500"></span>
  <div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between gap-1">
    <div class="font-medium">{company} — {role}</div>
    <div class="text-sm text-slate-500 dark:text-slate-400">{when} · {location}</div>
  </div>
  <div class="mt-2 text-sm text-slate-700 dark:text-slate-300">
    <slot />
  </div>
</li>
