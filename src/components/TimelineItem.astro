---
const { role, company, when, location } = Astro.props;
---
<li class="relative pl-8 scroll-slide-left group">
  <!-- Animated dot with glow -->
  <span class="absolute left-0 top-2 h-4 w-4 rounded-full bg-gradient-to-br from-sky-500 to-blue-600
               ring-4 ring-sky-500/20 dark:ring-sky-500/30
               group-hover:ring-8 group-hover:ring-sky-500/30 dark:group-hover:ring-sky-500/40
               transition-all duration-300
               shadow-lg shadow-sky-500/50"></span>

  <!-- Connecting line pulse animation -->
  <span class="absolute left-1.5 top-6 bottom-0 w-0.5 bg-gradient-to-b from-sky-200 to-transparent dark:from-sky-800 dark:to-transparent"></span>

  <div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between gap-2 mb-3">
    <div class="font-bold text-lg">
      <span class="text-slate-900 dark:text-white">{company}</span>
      <span class="text-slate-400 dark:text-slate-500 mx-2">•</span>
      <span class="text-sky-600 dark:text-sky-400">{role}</span>
    </div>
    <div class="text-sm font-medium text-slate-500 dark:text-slate-400 flex items-center gap-2">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
      {when}
      <span class="text-slate-300 dark:text-slate-600">•</span>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
      </svg>
      {location}
    </div>
  </div>
  <div class="text-sm text-slate-700 dark:text-slate-300 leading-relaxed">
    <slot />
  </div>
</li>
