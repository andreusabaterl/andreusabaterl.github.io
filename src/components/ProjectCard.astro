---
interface Props {
  title: string; href?: string; timeframe?: string; tech?: string[];
  children?: any;
}
const { title, href, timeframe, tech = [] } = Astro.props as Props;
---
<article class="card p-5 appear">
  <div class="flex items-start justify-between gap-4">
    <h3 class="text-lg font-semibold">
      {href ? <a href={href} rel="noopener noreferrer" class="hover:underline">{title}</a> : title}
    </h3>
    {timeframe && <span class="text-xs text-slate-500 dark:text-slate-400">{timeframe}</span>}
  </div>
  <div class="mt-2 text-sm text-slate-700 dark:text-slate-300">
    <slot />
  </div>
  {tech.length > 0 && (
    <ul class="mt-3 flex flex-wrap gap-2">
      {tech.map(t => <li class="chip">{t}</li>)}
    </ul>
  )}
</article>
