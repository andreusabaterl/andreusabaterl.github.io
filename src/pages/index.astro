---
import Layout from '../layouts/Layout.astro';

const skills = [
  "Python", "Django", "Java", "JavaScript", "React", "Kotlin",
  "C++", "C", "Ruby on Rails", "SQL", "DynamoDB",
  "CI/CD", "Microservices", "Hexagonal Architecture", "Git", "TDD",
  "OpenAI API", "LangChain", "Twelve Labs SDK", "AWS (basic)"
];
---

<Layout title="Andreu Sabater — Portfolio" description="Backend Engineer from Barcelona. Python/Django, microservices, CI/CD and GenAI.">
  <main class="max-w-4xl mx-auto px-6 py-16 text-gray-800">
    <!-- HERO -->
    <header class="mb-16 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-3">Andreu Sabater López</h1>
      <p class="text-lg text-gray-600 mb-6">Software/Backend Engineer · Barcelona, Spain</p>
      <p class="max-w-2xl mx-auto text-gray-700">
        I build scalable backends with Python/Django and microservice architectures.
        I'm passionate about solid engineering practices (CI/CD, TDD) and integrating Generative AI into real products.
      </p>
      <div class="mt-6 flex justify-center gap-4">
        <a href="mailto:andreusabaterl@gmail.com" class="text-blue-600 hover:underline">Email</a>
        <a href="https://linkedin.com/in/andreu-sabater-lópez-067485285" class="text-blue-600 hover:underline" rel="noopener noreferrer">LinkedIn</a>
        <a href="https://github.com/andreusabaterl" class="text-blue-600 hover:underline" rel="noopener noreferrer">GitHub</a>
      </div>
    </header>

    <!-- EXPERIENCE -->
    <section class="mb-16">
      <h2 class="text-2xl font-semibold mb-6 border-b border-gray-200 pb-2">Experience</h2>
      <article class="p-6 bg-gray-50 rounded-lg shadow-sm hover:shadow-md transition">
        <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-2">
          <div class="font-medium text-lg">Cleverea — Backend Engineer</div>
          <div class="text-gray-500">Sep 2024 – Present · Barcelona</div>
        </div>
        <ul class="list-disc list-inside text-gray-700 space-y-1">
          <li>Developing scalable backends with <strong>Python</strong> and <strong>Django</strong> following microservice and DDD principles.</li>
          <li>Designing and integrating APIs with external systems.</li>
          <li>Integrating <strong>Generative AI</strong> features using OpenAI, LangChain, and Twelve Labs.</li>
          <li>Applying <strong>CI/CD</strong>, <strong>TDD</strong>, monitoring, and engineering best practices.</li>
          <li>Collaborating closely with cross-functional teams.</li>
        </ul>
      </article>
    </section>

    <!-- SKILLS -->
    <section class="mb-16">
      <h2 class="text-2xl font-semibold mb-6 border-b border-gray-200 pb-2">Skills</h2>
      <ul class="flex flex-wrap gap-2">
        {skills.map((s) => (
          <li class="bg-blue-50 text-blue-700 px-3 py-1 rounded-full text-sm font-medium">{s}</li>
        ))}
      </ul>
    </section>

    <!-- EDUCATION -->
    <section class="mb-16">
      <h2 class="text-2xl font-semibold mb-6 border-b border-gray-200 pb-2">Education</h2>
      <article>
        <div class="font-medium text-lg">UPC — Bachelor in Computer Engineering (Software specialization)</div>
        <div class="text-gray-500 mb-1">Sep 2021 – Jun 2025</div>
        <p class="text-gray-700 text-sm">Thesis: Optimizing claim management using AI-driven automation.</p>
      </article>
    </section>

    <!-- CONTACT -->
    <section class="text-center">
      <h2 class="text-2xl font-semibold mb-6 border-b border-gray-200 pb-2 inline-block">Contact</h2>
      <p class="text-gray-700">
        <a href="mailto:andreusabaterl@gmail.com" class="block hover:underline">andreusabaterl@gmail.com</a>
        <a href="https://linkedin.com/in/andreu-sabater-lópez-067485285" class="block hover:underline" rel="noopener noreferrer">LinkedIn</a>
        <a href="tel:+34636842743" class="block hover:underline">+34 636 842 743</a>
      </p>
    </section>
  </main>
</Layout>
