---
import Layout from '../../layouts/Layout.astro';
import Section from '../../components/Section.astro';
import ProjectCard from '../../components/ProjectCard.astro';
import TimelineItem from '../../components/TimelineItem.astro';
import StatsCounter from '../../components/StatsCounter.astro';
import GitHubStats from '../../components/GitHubStats.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/translations';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const skills = [
  "Python", "Django", "SQL", "C++", "C", "Java", "JavaScript", "React", "Git",
  "Kotlin", "PostgreSQL", "DDD/Hexagonal", "AWS (basic)", "DynamoDB",
  "Redis", "CI/CD", "Docker", "Microservices", "TDD", "OpenAI API", "LangChain",
  "Twelve Labs", "Rails",
];
---

<Layout title="Andreu Sabater — Portfolio" description="Backend Engineer in Barcelona. Python/Django, microservices, CI/CD & GenAI.">
  <!-- HERO -->
  <main class="container-p pt-12 sm:pt-16 md:pt-20 pb-8">
    <header class="mb-12 sm:mb-16 md:mb-20 text-center">
      <!-- Avatar with floating animation -->
      <div class="relative inline-block mb-4 sm:mb-6 animate-fade-in">
        <div class="absolute inset-0 bg-gradient-to-r from-sky-500 to-blue-500 rounded-full blur-lg opacity-50 animate-pulse-slow"></div>
        <img src="/avatar.jpeg" alt="Andreu Sabater headshot"
             class="relative mx-auto h-24 w-24 sm:h-28 sm:w-28 md:h-32 md:w-32 rounded-full ring-4 ring-white dark:ring-slate-900 shadow-2xl object-cover animate-float" />
      </div>

      <!-- Name with gradient -->
      <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight mb-2 sm:mb-3 px-4 animate-fade-in-up animate-delay-100">
        <span class="bg-gradient-to-r from-slate-900 via-sky-800 to-slate-900 dark:from-white dark:via-sky-200 dark:to-white bg-clip-text text-transparent">
          Andreu Sabater López
        </span>
      </h1>

      <!-- Role with subtle animation -->
      <p class="text-sm sm:text-base md:text-lg text-slate-600 dark:text-slate-400 mb-2 px-4 animate-fade-in-up animate-delay-200">
        <span class="inline-flex items-center gap-2 flex-wrap justify-center">
          <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
          {t('hero.role')}
        </span>
      </p>

      <!-- Tagline -->
      <p class="text-sm sm:text-base text-slate-700 dark:text-slate-300 mb-4 sm:mb-6 px-4 animate-fade-in-up animate-delay-300">
        {t('hero.tagline')}
      </p>

      <!-- Main description with highlights -->
      <p class="max-w-2xl mx-auto text-sm sm:text-base md:text-lg text-slate-700 dark:text-slate-300 leading-relaxed px-4 animate-fade-in-up animate-delay-400">
        {t('hero.description').split('{python}')[0]}<strong class="text-sky-600 dark:text-sky-400 font-semibold">Python/Django</strong>{t('hero.description').split('{python}')[1].split('{hexagonal}')[0]}<strong class="text-emerald-600 dark:text-emerald-400 font-semibold">DDD/Hexagonal</strong>{t('hero.description').split('{hexagonal}')[1].split('{cicd}')[0]}<strong class="text-blue-600 dark:text-blue-400 font-semibold">CI/CD</strong>{t('hero.description').split('{cicd}')[1].split('{tdd}')[0]}<strong class="text-purple-600 dark:text-purple-400 font-semibold">TDD</strong>{t('hero.description').split('{tdd}')[1].split('{genai}')[0]}<strong class="text-indigo-600 dark:text-indigo-400 font-semibold">GenAI</strong>{t('hero.description').split('{genai}')[1]}
      </p>

      <!-- CTA Buttons with stagger -->
      <div class="mt-6 sm:mt-8 flex flex-wrap justify-center gap-3 sm:gap-4 px-4 animate-fade-in-up animate-delay-500">
        <a href="mailto:andreusabaterl@gmail.com" class="btn-primary group text-sm sm:text-base">
          <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          {t('hero.contact')}
        </a>
        <a href="https://github.com/andreusabaterl" target="_blank" rel="noopener noreferrer" class="btn group text-sm sm:text-base">
          <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4 group-hover:rotate-12 transition-transform" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
          </svg>
          {t('hero.github')}
        </a>
        <a href="/CV Andreu.pdf" download class="btn group text-sm sm:text-base">
          <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4 group-hover:translate-y-0.5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
          </svg>
          {t('hero.resume')}
        </a>
      </div>
    </header>

    <!-- Stats Counter -->
    <div class="mt-16">
      <StatsCounter />
    </div>
  </main>

  <!-- PROJECTS -->
  <!-- <Section id="projects" title="Selected Projects">
    <div class="grid sm:grid-cols-2 gap-6">
      <ProjectCard title="GenAI Video SDK" timeframe="2024" tech={["Twelve Labs","Python","Poetry","CI"]} href="#">
        Internal pip-style SDK with typed API, unit tests, and automated releases.
      </ProjectCard>
    </div>
  </Section> -->

  <!-- EXPERIENCE -->
  <Section id="experience" title={t('section.experience')}>
    <ol class="relative border-s-2 border-slate-200 dark:border-slate-800 space-y-8 pl-6">
      <TimelineItem company="Cleverea" role={t('experience.cleverea.role')} when="Sep 2024 – Present" location={t('experience.cleverea.location')}>
        <ul class="list-disc list-inside space-y-1">
          <li>{t('experience.cleverea.desc1')}</li>
          <li>{t('experience.cleverea.desc2')}</li>
          <li>{t('experience.cleverea.desc3')}</li>
          <li>{t('experience.cleverea.desc4')}</li>
          <li>{t('experience.cleverea.desc5')}</li>
        </ul>
      </TimelineItem>
    </ol>
  </Section>

  <!-- SKILLS -->
  <Section id="skills" title={t('section.skills')} subtitle={t('skills.subtitle')}>
    <div class="card p-6 scroll-fade-in">
      <!-- Skills chips with stagger animation -->
      <ul class="flex flex-wrap gap-2 mb-6">
        {skills.map((s, index) => (
          <li class="chip" style={`animation-delay: ${index * 50}ms`}>{s}</li>
        ))}
      </ul>

      <!-- Skill categories with progress bars -->
      <div class="mt-6 space-y-6">
        <div class="group">
          <div class="flex items-center justify-between mb-2">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-sky-600 dark:text-sky-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
              </svg>
              <span class="text-sm font-semibold text-slate-500 dark:text-slate-400">{t('skills.backend')}</span>
            </div>
            <span class="text-sm font-medium text-slate-900 dark:text-white">{t('skills.backend.tech')}</span>
          </div>
          <div class="h-2 bg-slate-200 dark:bg-slate-800 rounded-full overflow-hidden">
            <div class="h-full bg-gradient-to-r from-sky-500 to-blue-500 rounded-full transition-all duration-1000 ease-out group-hover:from-sky-600 group-hover:to-blue-600"
                 style="width: 90%; animation: slideInLeft 1.5s ease-out;"></div>
          </div>
        </div>

        <div class="group">
          <div class="flex items-center justify-between mb-2">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
              </svg>
              <span class="text-sm font-semibold text-slate-500 dark:text-slate-400">{t('skills.architecture')}</span>
            </div>
            <span class="text-sm font-medium text-slate-900 dark:text-white">{t('skills.architecture.tech')}</span>
          </div>
          <div class="h-2 bg-slate-200 dark:bg-slate-800 rounded-full overflow-hidden">
            <div class="h-full bg-gradient-to-r from-blue-500 to-purple-500 rounded-full transition-all duration-1000 ease-out group-hover:from-blue-600 group-hover:to-purple-600"
                 style="width: 85%; animation: slideInLeft 1.5s ease-out 0.2s both;"></div>
          </div>
        </div>

        <div class="group">
          <div class="flex items-center justify-between mb-2">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <span class="text-sm font-semibold text-slate-500 dark:text-slate-400">{t('skills.ops')}</span>
            </div>
            <span class="text-sm font-medium text-slate-900 dark:text-white">{t('skills.ops.tech')}</span>
          </div>
          <div class="h-2 bg-slate-200 dark:bg-slate-800 rounded-full overflow-hidden">
            <div class="h-full bg-gradient-to-r from-purple-500 to-pink-500 rounded-full transition-all duration-1000 ease-out group-hover:from-purple-600 group-hover:to-pink-600"
                 style="width: 50%; animation: slideInLeft 1.5s ease-out 0.4s both;"></div>
          </div>
        </div>
      </div>
    </div>
  </Section>

  <!-- EDUCATION -->
  <Section title={t('section.education')}>
    <article class="card p-6 scroll-fade-in group">
      <div class="flex items-start gap-4">
        <!-- Icon -->
        <div class="flex-shrink-0 w-12 h-12 rounded-lg bg-gradient-to-br from-sky-500 to-blue-600 flex items-center justify-center shadow-lg">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path d="M12 14l9-5-9-5-9 5 9 5z"></path>
            <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"></path>
          </svg>
        </div>

        <!-- Content -->
        <div class="flex-1">
          <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-2 mb-2">
            <h3 class="font-bold text-lg text-slate-900 dark:text-white">
              {t('education.degree')}
            </h3>
            <span class="text-sm font-medium text-slate-500 dark:text-slate-400 bg-slate-100 dark:bg-slate-800 px-3 py-1 rounded-full whitespace-nowrap">
              Sep 2021 – Jun 2025
            </span>
          </div>
          <p class="text-sky-600 dark:text-sky-400 font-medium mb-2">{t('education.university')}</p>
          <p class="text-sm text-slate-700 dark:text-slate-300">
            <strong>{t('education.thesis')}</strong> {t('education.thesis.title')}
          </p>
        </div>
      </div>
    </article>
  </Section>

  <!-- GITHUB STATS -->
  <!-- <Section id="github" title={t('section.github')} subtitle={t('github.subtitle')}>
    <GitHubStats username="andreusabaterl" />
  </Section> -->

  <!-- CONTACT -->
  <Section id="contact" title={t('section.contact')}>
    <div class="card p-8 scroll-fade-in text-center">
      <div class="max-w-xl mx-auto">
        <!-- Email CTA -->
        <a href="mailto:andreusabaterl@gmail.com" class="btn-primary text-lg group inline-flex">
          <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          andreusabaterl@gmail.com
        </a>

        <!-- Divider -->
        <div class="my-6 flex items-center gap-4">
          <div class="flex-1 h-px bg-gradient-to-r from-transparent via-slate-300 dark:via-slate-700 to-transparent"></div>
          <span class="text-sm text-slate-400 dark:text-slate-500">or</span>
          <div class="flex-1 h-px bg-gradient-to-r from-transparent via-slate-300 dark:via-slate-700 to-transparent"></div>
        </div>

        <!-- Contact links -->
        <div class="flex flex-wrap justify-center gap-4">
          <a href="tel:+34636842743" class="btn group">
            <svg class="w-4 h-4 group-hover:rotate-12 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            +34 636 842 743
          </a>
          <a href="https://linkedin.com/in/andreu-sabater-lópez-067485285" target="_blank" rel="noopener noreferrer" class="btn group">
            <svg class="w-4 h-4 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
            </svg>
            LinkedIn
          </a>
        </div>

        <!-- Additional info -->
        <p class="mt-6 text-sm text-slate-600 dark:text-slate-400">
          {t('contact.opportunities')}
        </p>
      </div>
    </div>
  </Section>
</Layout>
